{{#each goodsBlock}}
  <div class='row my-4'>
    <div class='col-12'>
      <div class='card'>
        <div class='card-body p-2'>
          <div class='row'>
            <div class='col-2'>
              <img src='{{image}}' alt='name' />
            </div>
            <div class='col-5'>
              <h5>{{name}}</h5>
              <div>{{description}}</div>
            </div>
            <div class='col-2 d-flex align-items-center'>
              <div class='row'>
                {{#with price}}
                  <div>{{title}}:</div>
                  <div>{{value}}</div>
                {{/with}}
              </div>
            </div>
            <div class='col-1 d-flex align-items-center'>
              <div class='row'>
                <div>{{amount}}</div>
              </div>
            </div>
            <div class='col-2 d-flex align-items-center'>
              <div class='row'>
                {{#each buttons}}
                  {{#if isPrimary}}
                    <div class='col-12 mb-3'><button
                        type='button'
                        class='btn btn-primary'
                      >{{text}}</button></div>
                  {{/if}}
                  {{#if isDanger}}
                    <div class='col-12'><button
                        type='button'
                        class='btn btn-outline-danger'
                      >{{text}}</button></div>
                  {{/if}}
                {{/each}}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{{/each}}