<footer>
  <hr />
  <div class='row mt-2 mb-3'>
    {{#each footer}}
      <div class='col'>
        <ul class='nav flex-column'>
          <li class='nav-item'>
            {{#each this}}
              {{#if @last}}
                <a
                  class='nav-link disabled'
                  aria-current='page'
                  href='{{link}}'
                >{{text}}</a>
              {{else}}
                <a
                  class='nav-link'
                  aria-current='page'
                  href='{{link}}'
                >{{text}}</a>
              {{/if}}
            {{/each}}
          </li>
        </ul>
      </div>
    {{/each}}
  </div>
</footer>