{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<div class='row'>
  <main>
    <section>
      <h1>{{name}} ({{price}} $) / {{category}}</h1>
      <div class='col-12 my-4'>
        {{description}}
      </div>
      {{#with features}}
        <div class='col-12 my-4'>
          {{#with processor}}
            <h4><span
                class='badge text-bg-dark'
              >Processor:</span></h4>
            <ul>
              <li>brand: {{brand}}</li>
              <li>model: {{model}}</li>
              <li>speed: {{speed}}</li>
              <li>cores: {{cores}}</li>
              <li>cache: {{cache}}</li>
            </ul>
          {{/with}}
        </div>
        <div class='col-12 my-4'>
          {{#with memory}}
            <h4><span
                class='badge text-bg-dark'
              >Memory:</span></h4>
            <ul>
              <li>type: {{type}}</li>
              <li>size: {{size}}</li>
              <li>speed: {{speed}}</li>
            </ul>
          {{/with}}
        </div>
        <div class='col-12 my-4'>
          {{#with storage}}
            <h4><span
                class='badge text-bg-dark'
              >Storage:</span></h4>
            <ul>
              <li>type: {{type}}</li>
              <li>size: {{size}}</li>
            </ul>
          {{/with}}
        </div>
        <div class='col-12 my-4'>
          {{#with display}}
            <h4><span
                class='badge text-bg-dark'
              >Display:</span></h4>
            <ul>
              <li>size: {{size}}</li>
              <li>resolution: {{resolution}}</li>
              <li>technology: {{technology}}</li>
              <li>color space: {{color_space}}</li>
              <li>brightness: {{brightness}}</li>
              <li>refresh rate: {{refresh_rate}}</li>
            </ul>
          {{/with}}
        </div>
        <div class='col-12 my-4'>
          {{#with graphics}}
            <h4><span
                class='badge text-bg-dark'
              >Graphics:</span></h4>
            <ul>
              <li>brand: {{brand}}</li>
              <li>model: {{model}}</li>
              <li>memory: {{memory}}</li>
            </ul>
          {{/with}}
        </div>
        <div class='col-12 my-4'>
          <h4><span
              class='badge text-bg-dark'
            >Ports:</span></h4>
          <ul>
            {{#each ports}}
              <li>{{type}} ({{count}})</li>
              {{#if features}}
                <ul>
                  {{#each features}}
                    <li>{{this}}</li>
                  {{/each}}
                </ul>
              {{/if}}
            {{/each}}
          </ul>
        </div>
        <div class='col-12 my-4'>
          {{#with battery}}
            <h4><span
                class='badge text-bg-dark'
              >Battery:</span></h4>
            <ul>
              <li>type: {{type}}</li>
              <li>capacity: {{capacity}}</li>
              <li>life: {{life}}</li>
            </ul>
          {{/with}}
        </div>
        <div class='col-12 my-4'>
          <h4><span
              class='badge text-bg-dark'
            >Weight:</span></h4>
          <ul>
            <li>{{weight}}</li>
          </ul>
        </div>
        <div class='col-12 my-4'>
          {{#with dimensions}}
            <h4><span
                class='badge text-bg-dark'
              >Dimensions:</span></h4>
            <ul>
              <li>height: {{height}}</li>
              <li>width: {{width}}</li>
              <li>depth: {{depth}}</li>
            </ul>
          {{/with}}
        </div>
        <div class='col-12 my-4'>
          <h4><span class='badge text-bg-dark'>Operating
              system:</span></h4>
          <ul>
            <li>{{operating_system}}</li>
          </ul>
        </div>
        <div class='col-12 my-4'>
          <h4><span
              class='badge text-bg-dark'
            >Accessories:</span></h4>
          <ul>
            {{#each accessories}}
              <li>{{name}} ({{price}} $)</li>
            {{/each}}
          </ul>
        </div>
      {{/with}}
    </section>
  </main>
</div>

