{{!--
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
--}}

<div class="row">
	<main>
		{{#with program}}
		<section>
			{{#with excursion}}
			<h1>{{name}} - {{location.city}}, {{location.country}} ({{date}})</h1>
			<div class="col-12 my-4">
				{{> title data="Program" big=true}}
				<ul>
					{{#each program}}
					<li>
						<div class="col-12 my-4"><strong>{{name}}</strong> - {{type}} ({{duration}})</div>
						<div class="col-12 my-4"><b>Details:</b></div>
						{{#with details}}
						{{#with museum}}
						<div>
							<div class="col-12 my-4">{{name}}</div>
							<div class="col-12 my-4">
								<address>{{location.address}} - {{location.city}}, {{location.country}}</address>
							</div>
						</div>
						<div class="col-12 my-4">
							<ul>
								{{#each exhibits}}
								<li>
									<div class="col-12 my-4">
										{{name}}
										{{#if artist}} ({{artist}}) {{/if}}
										- {{description}}
										{{#if audio_guide}} (<i>audio guide</i>) {{/if}}
								</li>
								{{/each}}
							</ul>
						</div>
						{{/with}}
						{{#with venue}}
						<div class="col-12 my-4">
							<div class="col-12 my-4">{{name}}</div>
							<div class="col-12 my-4">
								<address>{{location.address}} - {{location.city}}, {{location.country}}</address>
							</div>
						</div>
						{{/with}}
						{{#if performers}}
						<div class="col-12 my-4">
							<ul>
								{{#each performers}}
								<li>
									<div class="col-12 my-4">
										{{name}} - {{type}}
									</div>
								</li>
								{{/each}}
							</ul>
						</div>
						{{/if}}
						{{#with guide}}
						<div class="col-12 my-4"><b>Guide:</b> {{name}} (<em>{{language}}</em>) Rating: {{rating}} </div>
						{{/with}}
						<hr>
						{{/with}}
					</li>
					{{/each}}
				</ul>
			</div>
			{{/with}}
		</section>
		{{/with}}
	</main>
</div>

