<main>
  <div class='row mt-5 mb-3'>
    <div class='col-12'>
      {{#with formBlock}}
        <div class='row'>
          <div class='col-8'>
            <div class='row'>
              <div class='col-12'>
                <h1>{{header}}</h1>
                <p>{{rating.title}}: {{rating.value}}</p>
              </div>
            </div>
            <div class='row'>
              {{#with actionBlock}}
                <div class='col-12'>
                  <ul class='nav nav-tabs'>
                    {{#each tabs}}
                      <li class='nav-item'>
                        {{#if isActive}}
                          <a
                            class='nav-link active'
                            aria-current='page'
                            href='#'
                          >{{text}}</a>
                        {{else}}
                          <a
                            class='nav-link'
                            href='#'
                          >{{text}}</a>
                        {{/if}}
                      </li>
                    {{/each}}
                  </ul>
                </div>
                <div class='col-12 my-4'>
                  <hr />
                </div>
                {{#with field}}
                  <div class='col-12'>
                    <div class='card'>
                      <div class='card-body'>
                        <div class='row'>
                          <div
                            class='col'
                          >{{placeholder}}</div>
                          <div class='col text-end'>
                            {{#with button}}
                              <a
                                href='{{link}}'
                                class='btn btn-secondary'
                              >{{text}}</a>
                            {{/with}}
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                {{/with}}
              {{/with}}
              <div class='col-12 my-4'>
                <hr />
              </div>
              {{#with feedbackBlock}}
                <div class='col-12 mb-4'>
                  <h3>{{title}}</h3>
                </div>
                {{#each buttons}}
                  <div class='col-auto px-1'>
                    {{#if isWarning}}
                      <a
                        href='{{link}}'
                        class='btn btn-warning text-white'
                      >{{text}}</a>
                    {{/if}}
                    {{#if isSuccess}}
                      <a
                        href='{{link}}'
                        class='btn btn-success'
                      >{{text}}</a>
                    {{/if}}
                    {{#if isDanger}}
                      <a
                        href='{{link}}'
                        class='btn btn-danger'
                      >{{text}}</a>
                    {{/if}}
                  </div>
                {{/each}}
              {{/with}}
            </div>
          </div>
          {{#with goodsInfo}}
            <div class='col-4'>
              <div class='row mb-3'>
                <div class='col-12'>
                  <div class='card'>
                    <div class='card-body'>
                      <img src='{{photo}}' alt='' />
                      <div>{{name}}</div>
                    </div>
                  </div>
                </div>
              </div>
              <div class='row mb-3'>
                <div class='col-12'>
                  <div class='card'>
                    <div class='card-body'>
                      <h5>{{price}}</h5>
                      <div>Є в наявності</div>
                      {{#each buttons}}
                        <div class='col-12 mt-2'>
                          {{#if isPrimary}}
                            <a
                              href='{{link}}'
                              class='btn btn-primary'
                            >{{text}}</a>
                          {{/if}}
                          {{#if isSecondary}}
                            <a
                              href='{{link}}'
                              class='btn btn-secondary'
                            >{{text}}</a>
                          {{/if}}
                        </div>
                      {{/each}}
                    </div>
                  </div>
                </div>
              </div>
              <div class='row'>
                <div class='col-12'>
                  <div class='card'>
                    <div class='card-body'>
                      {{#with seller}}
                        <div class='col-12'>
                          {{title}}:
                          <b>{{value}}</b>
                        </div>
                      {{/with}}
                    </div>
                  </div>
                </div>
              </div>
            </div>
          {{/with}}
        </div>
      {{/with}}
    </div>
  </div>
  <div class='col-12 my-5'>
    <hr />
  </div>
  {{> reviewItem reviewList=reviewList}}
	{{> shopaction}}
</main>