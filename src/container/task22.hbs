{{! 
Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
 }}

<div>
  <main>
    <section>
      <div>
        {{#with page_header}}
          <h1 class='text-center'>{{title}}</h1>
          <p
            class='text-center text-uppercase'
          >{{description}}</p>
        {{/with}}
      </div>
      {{#with section}}
        <div class='card my-4'>
          {{#with about_us}}
            <div class='card-body'>
              {{#with title_list}}
                <h1 class='display-6 text-end'>{{main}}</h1>
                <h2 class='text-end'>{{sub}}</h2>
              {{/with}}
              {{#with button}}
                <div class='col-12 mt-4'>
                  <button
                    type='button'
                    class='btn btn-outline-info'
                  >{{text}}</button>
                </div>
              {{/with}}
            </div>
          {{/with}}
        </div>
        <div class='card my-4'>
          {{#with advantage}}
            <div class='card-body'>
              <h1 class='display-5'>{{title}}</h1>
              <div class='card my-4'>
                {{#with efficiency}}
                  <div class='card-body'>
                    <h1 class='display-4'>{{title}}</h1>
                    <h6>{{sub_title}}</h6>
                    <p>{{description}}</p>
                    <div class='col-12 mt-4'>
                      <button
                        type='button'
                        class='btn btn-outline-warning'
                      >{{button}}</button>
                    </div>
                  </div>
                {{/with}}
              </div>
              <div class='card my-4'>
                {{#with innovation}}
                  <div class='card-body'>
                    <h1
                      class='display-4 text-center'
                    >{{title}}</h1>
                    <h6
                      class='text-center'
                    >{{sub_title}}</h6>
                    <p
                      class='text-center'
                    >{{description}}</p>
                    <div class='col-12 mt-4'>
                      <button
                        type='button'
                        class='btn btn-outline-warning'
                      >{{button}}</button>
                    </div>
                  </div>
                {{/with}}
              </div>
              <div class='card mt-4'>
                {{#with collaboration}}
                  <div class='card-body'>
                    <h1
                      class='display-4 text-end'
                    >{{title}}</h1>
                    <h6 class='text-end'>{{sub_title}}</h6>
                    <p class='text-end'>{{description}}</p>
                    <div class='col-12 mt-4'>
                      <button
                        type='button'
                        class='btn btn-outline-warning'
                      >{{button}}</button>
                    </div>
                  </div>
                {{/with}}
              </div>
            </div>
          {{/with}}
        </div>
        <div class='card my-4'>
          {{#with agreement}}
            <div class='card-body'>
              <h1 class='display-5'>{{title}}</h1>
              <div class='card mt-4'>
                {{#with info}}
                  <div class='card-body'>
                    <h5>{{sub_title}}</h5>
                    <div class='card mt-4'>
                      {{#with detail}}
                        <div class='card-body'>
                          <p>{{text}}</p>
                          <div class='col-12 mt-4'>
                            <button
                              type='button'
                              class='btn btn-success'
                            >{{button}}</button>
                          </div>
                        </div>
                      {{/with}}
                    </div>
                  </div>
                {{/with}}
              </div>
            </div>
          {{/with}}
        </div>
      {{/with}}
    </section>
  </main>
</div>

