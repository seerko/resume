{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div class="row">
	{{#with main}}
	<main>
		<section>
			{{> title data="Work history" big=true}}
			<div class="col-12">
				<ul>
					{{#each works}}
					<li class="my-4">
						<div class="col-12 mb-4">{{position}}</div>
						<div class="col-12 mb-4">
							{{duration.from}} -
							{{#if duration.to}} {{duration.to}} {{else}} (досі працюю) {{/if}}
						</div>
						<div class="col-12 mb-4">
							{{#if company.url}}
							{{> link text=company.name href=company.url blank=true noLine=true }}
							{{else}}
							<b>{{company.name}}</b>
							{{/if}}
						</div>
						<div class="col-12 mb-4">
							<strong>Projects ({{projectAmount}})</strong>
						</div>
						<ul>
							{{#each projects}}
							<li>
								<div class="col-12 mb-4">
									{{> link text=name href=url blank=true noLine=true }}
								</div>
								<div class="col-12 mb-4">
									<p>{{about}}</p>
								</div>
								<div class="col-12 mb-4">
									<em class="mb-4">Project stacks ({{stackAmount}})</em>
									<ul>
										{{#each stacks}}
										<li class="my-4">{{name}}</li>
										{{/each}}
									</ul>
								</div>
								<div class="col-12 mb-4">
									<em class="mb-4">Project awards ({{awardAmount}})</em>
									<ul>
										{{#each awards}}
										<li class="my-4">{{name}}</li>
										{{/each}}
									</ul>
								</div>
							</li>
							{{/each}}
						</ul>
					</li>
					{{/each}}
				</ul>
			</div>
		</section>
	</main>
	{{/with}}

</div>

